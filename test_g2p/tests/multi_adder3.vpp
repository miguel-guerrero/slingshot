defaultParamDict = {'CNT':8, 'WIDTH':32, 'HAS_CIN':0}
name, params, paramDict = g.processParams('multi_adder3', passedParamDict, defaultParamDict)

for i in range(params.CNT):
     IOs += [ g.Input(f'a{i}', params.WIDTH),
              g.Input(f'b{i}', params.WIDTH),
              g.Output(f'sum{i}', params.WIDTH+1)]
     if params.HAS_CIN:
         IOs.append(g.Input(f'cin{i}'))

|module ${name} (
    ${g.vlogIO(IOs)}
|);

for i in range(params.CNT):
    ins = instances.new('adder', {'WIDTH':16})

|
|   ${ins.module.name} ${ins.name} (
|       .a(a${i}),
|       .b(b${i}),
|       .sum(sum${i})
    if params.HAS_CIN:
|      ,cin(cin${i})
    endif
|   );

endfor

|endmodule

